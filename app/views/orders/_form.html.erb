<div class="row">
  <div class="col-md-4">
    <div class="thumbnail">
       <%= image_tag @listing.image.url %>
    </div>
    <h3><%= @listing.name %></h3>
    <h4><%= number_to_currency(@listing.price) %></h4>
    </div>
    <div class="col-md-8">

<%= form_for([@listing, @order]) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h4>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :endereço %><br>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :cidade %><br>
    <%= f.text_field :city, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :estado %><br>
    <%= f.text_field :state, class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-8">
        <%= label_tag :card_number, "Cartão de Crédito" %><br>
        <%= text_field_tag :card_number, nil, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= label_tag :card_code, "Código de Segurança" %><br>
        <%= text_field_tag :card_code, nil, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag nil, "Vencimento do Cartão" %>
    <div class="row">
      <div class="col-md-3">
        <%= select_month nil, {use_two_digit_numbers: true}, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+10}, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "Finalizar Compra", class: "btn btn-success" %>
  </div>
<% end %>
</div>
</div>
