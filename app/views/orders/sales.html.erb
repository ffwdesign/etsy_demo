<div class="center">
<h2>Histórico de suas vendas</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th>Imagem</th>
    <th>Item</th>
    <th>Preço</th>
    <th>Comprador</th>
    <th>Data da Venda</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td class="center"><%= image_tag order.listing.image.url(:thumb) %></td>
      <td class="center"><%= order.listing.name %></td>
      <td class="center"><%= number_to_currency(order.listing.price) %></td>
      <td class="center"><%= order.buyer.name %></td>
      <td class="center"><%= order.created_at.strftimr("%B %-d, %Y")  %></td>
      
    </tr>
  <% end %>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'Novo Item', new_listing_path, class: "btn btn-success" %>
<% end %>