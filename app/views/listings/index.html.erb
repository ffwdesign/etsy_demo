<div class="bs-example">
    <div id="myCarousel" class="carousel slide" data-interval="3000" data-ride="carousel">
      <!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>   
       <!-- Carousel items -->
        <div class="carousel-inner">
            <div class="active item"><img src="https://www.dropbox.com/s/yk4rptbxqby3rw9/slide1.jpg?raw=1" style="width:100%" data-src="holder.js/900x500/auto/#7cbf00:#fff/text: " alt="First slide">
            </div>
            
            <div class="item"><img src="https://www.dropbox.com/s/7lop4vzutyt8yhw/slide2.jpg?raw=1" style="width:100%">
            </div>    
            
            <div class="item"><img src="https://www.dropbox.com/s/27s5qr824hk1gc5/slide3.jpg?raw=1" style="width:100%">
            </div>
        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div>


  <div class="row">

    <div class="my-container">
      <div class="center">
        <% @listings.each do |listing| %>
          <div class="col-md-3">
            <div class="thumbnail">
              <%= link_to image_tag(listing.image.url), listing %>
          
              <div class="caption">
                <h2><%= listing.name %></h2>
                <div class="price">
                <%= number_to_currency(listing.price) %><br>
                </div>
                <p><%= "Oferecido por #{listing.user.name}" %></p><br><br>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<br>
</div>

<div class="row>">
<br><br>
<% if (user_signed_in?) %>
  <%= link_to 'Novo Item', new_listing_path, class: "btn btn-success" %>
<% end %>
</div>


