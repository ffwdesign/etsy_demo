
  

  <div class="row">

    <div class="my-container">
      <div class="center">
        <% @listings.each do |listing| %>
          <div class="col-md-3">
            <div class="thumbnail">
              <%= link_to image_tag(listing.image.url), listing %>
          
              <div class="caption">
                <h2><%= listing.name %></h2>
                <div class="price">
                <%= number_to_currency(listing.price) %><br>
                </div>
                <p><%= "Oferecido por #{listing.user.name}" %></p><br><br>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<br>

<% if (user_signed_in?) %>
  <%= link_to 'Novo Item', new_listing_path, class: "btn btn-success" %>
<% end %>

</div>
